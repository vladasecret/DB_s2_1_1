@model DB_s2_1_1.PagedResult.PagedResult<Route>
@using DB_s2_1_1.EntityModels

@{
    ViewData["Title"] = "Routes";
}

<h1>Routes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Num of stations in route
            </th>
            <th>
                First station
            </th>
            <th>
                Last station
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Results)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Stations.Count
                </td>
                @if (item.Stations.Count > 0)
                {
                    <td>@item.Stations.ElementAtOrDefault(0).Station.Name</td>
                    <td>@item.Stations.ElementAtOrDefault(item.Stations.Count - 1)?.Station.Name</td>
                }
                else
                {
                    <th></th>
                    <th></th>
                }

                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        @for (int i = Math.Max(Model.CurrentPage - 4, 1); i < Model.CurrentPage; ++i)
        {
            <button class="btn btn-primary" type="submit" name="Page" value="@i">@i</button>
        }
        <button class="btn btn-primary" type="submit" name="Page" value="@Model.CurrentPage" disabled>@Model.CurrentPage</button>
        @for (int i = Model.CurrentPage + 1; i <= Math.Min(Model.CurrentPage + 4, Model.PageCount); ++i)
        {
            <button class="btn btn-primary" type="submit" name="Page" value="@i">@i</button>
        }
    </div>
</form>